# ============================================
# Docker Compose Environment Variables
# Copy this file to .env and update with your values
# ============================================

# ============================================
# FOR LOCAL DEVELOPMENT
# ============================================
# Uncomment these for local development:
# DJANGO_SECRET_KEY=dev-secret-key-change-me
# DEBUG=True
# ALLOWED_HOSTS=localhost,127.0.0.1
# DB_NAME=msccert_db
# DB_USER=postgres
# DB_PASSWORD=postgres
# FRONTEND_URL=http://localhost
# REACT_APP_API_URL=http://localhost:8000
# CORS_ALLOWED_ORIGINS=http://localhost
# CSRF_TRUSTED_ORIGINS=
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# SECURE_SSL_REDIRECT=False

# ============================================
# FOR PRODUCTION (Hostinger VPS - msc-cert.com)
# ============================================
# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-strong-one
DEBUG=False
ALLOWED_HOSTS=msc-cert.com,www.msc-cert.com,localhost,127.0.0.1

# Database Configuration
DB_NAME=msccert_db
DB_USER=msccert_user
DB_PASSWORD=your-secure-db-password-here

# Frontend URLs
FRONTEND_URL=https://msc-cert.com
REACT_APP_API_URL=https://msc-cert.com/api

# CORS Settings (comma-separated, no spaces)
CORS_ALLOWED_ORIGINS=https://msc-cert.com,https://www.msc-cert.com

# CSRF Trusted Origins (comma-separated, no spaces)
CSRF_TRUSTED_ORIGINS=https://msc-cert.com,https://www.msc-cert.com

# Email Configuration (Optional - configure for production email)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@msc-cert.com

# Security Settings (Production)
SECURE_SSL_REDIRECT=True