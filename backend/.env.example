# ============================================
# MSC Certificate Backend - Environment Variables
# ============================================
# INSTRUCTIONS:
# 1. Copy this file to .env for local development
# 2. Fill in all required variables marked with **REQUIRED**
# 3. Generate SECRET_KEY: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# 4. NEVER commit .env file to version control

# ============================================
# CORE DJANGO SETTINGS
# ============================================

# **REQUIRED** - Django Secret Key (NEVER use default in production!)
DJANGO_SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION

# Debug mode (True for development, False for production)
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
# Example: yourdomain.com,www.yourdomain.com,api.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================

DB_NAME=msccert_db
DB_USER=postgres
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=5432

# ============================================
# FRONTEND & CORS SETTINGS
# ============================================

# Frontend URL (used for QR code generation)
FRONTEND_URL=http://localhost:3000

# CORS allowed origins (comma-separated, no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# CSRF Trusted Origins (required in production for POST/PUT/DELETE)
# Example: https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================

# Email backend (console for dev, smtp for production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production: EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP Settings (for production email sending)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Default sender email
DEFAULT_FROM_EMAIL=noreply@msccertificates.com
SERVER_EMAIL=admin@msccertificates.com

# ============================================
# SECURITY SETTINGS (PRODUCTION)
# ============================================

# Force HTTPS redirect (True in production)
SECURE_SSL_REDIRECT=True

