# Django Backend Environment Variables
# Copy this file to .env for local development

# Django Secret Key (generate a new one for production)
DJANGO_SECRET_KEY=your-secret-key-here

# Debug mode (True for development, False for production)
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend URL (for QR code generation)
FRONTEND_URL=http://localhost:3000

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database (optional, defaults to SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# For production on Render:
# DJANGO_SECRET_KEY=<auto-generated by Render>
# DEBUG=False
# ALLOWED_HOSTS=your-backend-name.onrender.com
# FRONTEND_URL=https://your-frontend-name.netlify.app
# CORS_ALLOWED_ORIGINS=https://your-frontend-name.netlify.app
